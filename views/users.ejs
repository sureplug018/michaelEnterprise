<%- include('partials/adminDashboardHead.ejs') %>
<div class="nk-content nk-content-fluid">
  <div class="container-xl wide-xl">
    <div class="nk-content-body">
      <div class="nk-block-head nk-block-head-sm">
        <div class="nk-block-between g-3">
          <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Users</h3>
          </div>
          </div>
      </div>
      <div class="nk-block">
        <div class="card card-stretch">
          <div class="card-inner p-0">
            <div class="tab-content">
              <% if (users.length === 0) { %>
              <p style="text-align: center; font-size: large; margin-top: 50px;">No User Found!</p>
              <% }else{ %>
              <div style="margin-top: 30px;" class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Phone number</th>
                      <th scope="col">Confirmed</th>
                      <th scope="col">Role</th>
                      <th scope="col">Created At</th>
                      <th scope="col">Send Mail</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(function(user, index){ %>
                    <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><%= user.firstName %></td>
                      <td><%= user.lastName %></td>
                      <td><%= user.email %></td>
                      <td><%= user.phoneNumber %></td>
                      <td><%= user.confirmed %></td>
                      <td><%= user.role %></td>
                      <% const dateString = user.createdAt %>
                      <% const dateObject = new Date(dateString); %>
                      <% date = dateObject.toLocaleDateString() %>
                      <% time = dateObject.toLocaleTimeString() %>
                      <td><%= date %> (<%= time %>)</td>
                      <td><a class="send-mail-modal" href="#" data-user-id="<%= user.id %>" data-bs-toggle="modal" data-bs-target="#reply-support"><i class="fa-solid fa-envelope fa-xl"></i></a></td>
                    </tr>
                    <% }) %>
                    <% } %>

                  </tbody>
                </table>
              </div>
            </div>


            <div class="modal fade" role="dialog" id="reply-support">
              <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content"><a href="profile.html#" class="close" data-bs-dismiss="modal"><em class="icon ni ni-cross-sm"></em></a>
                  <div class="modal-body modal-body-lg">
                    <h5 class="title">Send Mail</h5>
                    <ul class="nk-nav nav nav-tabs">
                      <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="profile.html#personal">Support</a></li>
                    </ul>
                    <div class="tab-content">
                      <div class="tab-pane active" id="personal">
                        <div class="row gy-4">
                          <div class="form-group">
                            <label class="form-label" for="subject">Subject</label>
                            <input type="text" class="form-control form-control-lg" id="subject" placeholder="Subject">
                          </div>
                          <div class="form-group">
                            <label class="form-label" for="message">Message</label>
                            <textarea id="message" placeholder="Write Message" class="form-control form-control-lg date-picker"></textarea>
                          </div>
                        </div>
                        <p></p>
                        <div class="col-12">
                          <ul class="align-center flex-wrap flex-sm-nowrap gx-4 gy-2">
                            <li><a href="#" class="btn btn-lg btn-primary send-mail-btn">Send Mail</a></li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="card-inner">
          <ul class="pagination" style="display: flex; justify-content: space-between; width: 100%;">
            <li class="page-item">
              <button id="previous-btn-afro-shop" style="padding: 8px 18px; font-size: 14px; border-radius: 8px; font-weight: bold;" class="page-link" onclick="updateURLAdminAfro('prev')">Prev</button>
            </li>
            <li class="page-item">
              <button id="next-btn-afro-shop" style="padding: 8px 18px; font-size: 14px; border-radius: 8px; font-weight: bold;" class="page-link" onclick="updateURLAdminAfro('next')">Next</button>
            </li>
          </ul>
        </div>

      </div>
    </div>
  </div>
</div>
<%- include('partials/adminDashboardFooter.ejs') %>