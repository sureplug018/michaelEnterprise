<div class="nk-content nk-content-fluid">
  <div class="container-xl wide-xl">
    <div class="nk-content-body">
      <div class="nk-block-head nk-block-head-sm">
        <div class="nk-block-between">
          <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Add Products</h3>
          </div>
        </div>
      </div>
      <div class="nk-block">
        <div class="card">
          <div class="d-flex justify-content-center align-items-center" style="padding-top: 50px; padding-bottom: 50px;">
            <form class="add-category-form">
              <div class="wide-xs w-100">
                <div class="row g-3">
                  <div class="col-12">
                    <div class="form-group"><label class="form-label" for="email">Category Name</label>
                      <div class="form-control-wrap"><input class="form-control" type="text" id="name" placeholder="Category Name" /></div>
                    </div>
                    <div class="form-group"><label class="form-label" for="email">Super Category</label>
                      <div class="form-control-wrap">
                        <select class="form-control" id="superCategory">
                          <option value="" selected disabled>Select</option>
                          <option value="Afro shop">Afro Shop</option>
                          <option value="Kitchen">Kitchen</option>
                          <option value="Gadgets">Gadgets</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <div style="margin-top: 15px;" class="col-12">
                  <div class="form-group">
                    <button class="btn btn-primary btn-block add-category-btn">Add Category</button>
                  </div>
                </div>
              </div>
          </div>
          </form>


        </div>
      </div>
    </div>
  </div>
</div>
</div>

